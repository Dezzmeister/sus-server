{
  "name": "sus-server",
  "version": "1.0.0",
  "description": "Sus URL shortener backend",
  "main": "src/server.ts",
  "private": true,
  "mikro-orm": {
    "useTsNode": "true",
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "scripts": {
    "start:ts": "npx ts-node src/server.ts",
    "start": "ts-node-dev --respawn -T src/server.ts",
    "build:dev": "tsc && yarn run copy-files:dev",
    "start:dev": "yarn run build:dev && node dist/server/app.js",
    "build:prod": "tsc && yarn run copy-files:prod",
    "start:prod": "node dist/server.js",
    "copy-files:prod": "cp src/views dist/server -r",
    "copy-files:dev": "xcopy src\\views dist\\server\\views\\ /e /y",
    "migration:generate": "yarn run build && npx mikro-orm migration:create",
    "migrate": "npx mikro-orm migration:up",
    "migrate:revert": "yarn run build && npx mikro-orm migration:down",
    "lint": "eslint ./src",
    "prettify": "npx prettier --write ./src"
  },
  "author": "Joe Desmond",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.13",
    "@types/express-handlebars": "^3.1.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "16.9.2",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "prettier": "2.4.1",
    "ts-node": "10.2.1",
    "ts-node-dev": "1.1.8",
    "typescript": "4.4.3"
  },
  "dependencies": {
    "@mikro-orm/cli": "4.5.9",
    "@mikro-orm/core": "4.5.9",
    "@mikro-orm/migrations": "4.5.9",
    "@mikro-orm/postgresql": "4.5.9",
    "@mikro-orm/reflection": "4.5.9",
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-handlebars": "5.2.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "8.7.1",
    "redis-commands": "1.7.0",
    "winston": "3.3.3"
  }
}